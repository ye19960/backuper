{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "singlefile debug",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceRoot}/temp/a.out", 
                "-I", "${workspaceRoot}/src"
                ],
            "options": {},
            "problemMatcher": {
                "owner": "cpp",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build",
        }
    ]
}